{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"command": ["bunx", "-y", "@upstash/context7-mcp"],
			"enabled": true
		},
		"clarifo": {
			"type": "local",
			"command": [
				"/home/orenji/.bun/bin/bun",
				"run",
				"/home/orenji/coding/clarifo/index.ts"
			],
			"enabled": true
		}
	},
	"provider": {
		"openrouter": {
			"npm": "@openrouter/ai-sdk-provider",
			"name": "OpenRouter",
			"options": {},
			"models": {
				"qwen/qwen3-coder:free": {
					"name": "Qwen3 Coder (free)"
				},
				"moonshotai/kimi-k2:free": {
					"name": "Kimi K2 (free)"
				},
				"qwen/qwen3-235b-a22b-07-25:free": {
					"name": "Qwen3 235B A22B 2507 (free)"
				}
			}
		}
	},
	"mode": {
		"discuss": {
			"prompt": "{file:./prompts/brainstorming.txt}",
			"tools": {
				"bash": false,
				"edit": false,
				"write": false,
				"webfetch": true,
				"patch": false,
				"todowrite": false,
				"todoread": false,
				"task": false,
				"read": true,
				"grep": true,
				"glob": true,
				"list": true
			}
		},
		"ask": {
			"prompt": "{file:./prompts/ask.txt}",
			"tools": {
				"bash": false,
				"edit": false,
				"write": false,
				"webfetch": true,
				"patch": false,
				"todowrite": false,
				"todoread": false,
				"task": false,
				"read": true,
				"grep": true,
				"glob": true,
				"list": true
			}
		}
	}
}
